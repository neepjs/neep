{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "Neep",
    "outDir": "./types/",
    "module": "commonjs",
    "target": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@neep/core": ["packages/core/src"],
      "@neep/renderer-html": ["packages/renderer-html/src"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
