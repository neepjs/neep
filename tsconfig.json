{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "createElement",
    "outDir": "./types/",
    "module": "commonjs",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@neep/core": ["packages/core/src"],
      "@neep/web-render": ["packages/web-render/src"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
